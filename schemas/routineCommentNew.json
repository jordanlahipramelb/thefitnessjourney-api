{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "body": {
      "type": "string",
      "minLength": 5,
      "maxLength": 300
    },
    "date": {
      "minLength": 1
    },
    "routine_id": {
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": ["username", "body", "date", "routine_id"]
}
