{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "username": {
      "type": "string",
      "minLength": 0,
      "maxLength": 50
    }
  },
  "additionalProperties": false,
  "required": ["name", "username", "description"]
}
