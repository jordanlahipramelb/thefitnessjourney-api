{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "subject": {
      "type": "string",
      "minLength": 0,
      "maxLength": 50
    },
    "body": {
      "type": "string",
      "minLength": 5,
      "maxLength": 300
    },
    "date": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false,
  "required": ["username", "subject", "body", "date"]
}
